<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="25dp"
    android:background="@drawable/item_bg"
    android:weightSum="2"
    android:paddingBottom="30dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/item_bg"
        android:elevation="15dp"
        android:backgroundTint="#F0F9B5"
        android:paddingBottom="10dp"
        android:layout_marginVertical="10dp">

        /*Item image*/
        <ImageView
            android:id="@+id/imageshoppinglisttemplate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>

        /*Item Name and Category labels*/
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="3dp">

            /*Item Name label*/
            <TextView
                android:id="@+id/itemnameshoppinglisttemplate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"

                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:hint="name"/>

            /*Item Category label*/
            <TextView
                android:id="@+id/catnameshoppinglisttemelate"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"

                android:textSize="15sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:hint="category"/>

        </LinearLayout>

        /*Quantity and Price labels*/
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:orientation="vertical">

            /*Quantity label*/
            <TextView
                android:id="@+id/qtyshoppinglisttemeplate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textSize="16sp"
                android:hint="qty: 55"
                android:layout_marginVertical="6dp"/>

            /*Price label*/
            <TextView
                android:id="@+id/priceshoppinglisttemeplate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:hint="R 55"
                android:layout_marginVertical="6dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>